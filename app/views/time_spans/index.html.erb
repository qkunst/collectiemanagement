
<h1>Gebeurtenissen</h1>

<table>
  <thead>
    <tr>
      <th>Begin</th>
      <th>Einde</th>
      <th>Status</th>
      <th>Contact</th>
      <th>Soort</th>
    </tr>
  </thead>

  <tbody>
    <% @time_spans.each do |time_span| %>
      <tr>
        <td><%= time_span.starts_at %></td>
        <td><%= time_span.ends_at %></td>
        <td><%= I18n.t(time_span.status, scope: "activerecord.values.time_span.status") %></td>
        <td><%= link_to(time_span.contact.name, time_span.contact.url) if time_span.contact %></td>
        <td><%= link_to time_span.classification, [@collection, @subject, time_span] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('Gebeurtenis toevoegen', (@work ? new_collection_work_time_span_path(@collection, @work) : new_collection_work_set_time_span_path(@collection, @subject))) if @subject %>
