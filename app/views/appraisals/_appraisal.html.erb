<h5>Waardering <%= I18n.l appraisal.appraised_on, format: :short_month_year if appraisal.appraised_on%> <small>(<%= link_to 'Bewerk', (@appraisee.is_a?(Work) ? edit_collection_work_appraisal_path(@collection, @appraisee, appraisal) : edit_collection_work_set_appraisal_path(@collection, @appraisee, appraisal)), data: { open_in_context: true} %>)</small></h5>
<div class="detailed_data">
  <%= definition_list_for appraisal, {render_as: :table, key_width: '40%'} do %>
  <%= define_when_present :appraised_by %>
  <%= define_when_present :market_value, modifier: :number_to_currency, description: 'Marktwaarde' %>
  <%= define_when_present :replacement_value, modifier: :number_to_currency, description: 'Vervangingswaarde' %>
  <%= define_when_present :market_value_range, modifier: :number_to_currency, description: "Marktwaarde" %>
  <%= define_when_present :replacement_value_range, modifier: :number_to_currency, description: "Vervangingswaarde" %>
  <%= define_when_present :reference %>
  <% end %>
</div>