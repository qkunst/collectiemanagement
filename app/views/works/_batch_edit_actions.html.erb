      <%= button_tag "Beprijs", type: :submit, name: "expose_fields[]", value: :selling_price, class: :button %>
      <%= button_tag "Waardering", type: :submit, name: "expose_fields[]", value: :appraisals_attributes, class: :button %>
      <% end %>
      <%= button_tag "Overige velden", type: :submit, name: "expose_fields[]", value: nil, class: :button %>
      <%= button_tag "Maak rapportage", type: :submit, name: :batch_process_property, value: :create_report, class: :button %>
      <%= button_tag "Groepeer", type: :submit, name: :batch_process_property, value: :create_work_set, class: :button %>
    </div>
    </div>
  </div>
