<%= simple_form_for @form, url: collection_batch_path(@collection), method: :get, html: {id: "batch-work"} do |f| %>
<h1>Scan of zoek werken met codes</h1>
<fieldset>
  <%= link_to "Open camera scanner", scan_url(open_in_context: true), class: [:button, :tertiary, :right], data: { open_in_context: true} %>
  <label for="work_numbers_return_separated">Inventarisnummers / alternatieve nummers (waaronder evt. barcodes) van aan te passen werken regel-gescheiden</label>
  <textarea data-zxing-output-target name="work_numbers_return_separated" id="work_numbers_return_separated" autofocus></textarea>
</fieldset>
<%= render partial: "works/batch_edit_actions" %>
<% end %>
