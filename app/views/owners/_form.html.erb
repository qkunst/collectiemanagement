<%= simple_form_for([@collection,@owner].compact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :creating_artist%>
    <% unless @collection and @owner.id.nil? %>
      <%= f.association :collection %>
    <% end %>
    <%= f.input :hide if @owner.id%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: :button %>
  </div>
<% end %>
